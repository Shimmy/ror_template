<% content_for :title, "project" %>
<div class="max-w-3xl mx-auto">
  <% if notice.present? %>
    <div class="p-4 mb-6 rounded-md bg-green-50 border border-green-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <!-- Success icon -->
          <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>
  <div class="bg-white p-6 shadow-md rounded-lg">
    <div class="flex justify-between mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Project Details</h1>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_project_path(@project), class: "px-3 py-1 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Back", projects_path, class: "px-3 py-1 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
    <div data-controller="docker" class="mb-8">
      <div class="flex space-x-2 mb-2">
        <button type="button" data-action="click->docker#send" data-action-name="build_container" data-url="<%= build_container_project_path(@project) %>" class="px-3 py-1 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Create Docker Image</button>
        <button type="button" data-action="click->docker#send" data-action-name="start_container" data-url="<%= start_container_project_path(@project) %>" class="px-3 py-1 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Start Container</button>
        <button type="button" data-action="click->docker#send" data-action-name="stop_container" data-url="<%= stop_container_project_path(@project) %>" class="px-3 py-1 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Stop Container</button>
      </div>
      <span id="docker-output" data-docker-target="output" class="text-sm"></span>
    </div>
    <div class="space-y-4">
          <div class="border-b border-gray-200 pb-4">
        <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900">
                          
          <dd class="mt-1 text-sm text-gray-900"><%= @project.name %></dd>
              </div>
          <div class="border-b border-gray-200 pb-4">
        <dt class="text-sm font-medium text-gray-500">Docker container</dt>
          <dd class="mt-1 text-sm text-gray-900">
                          
          <dd class="mt-1 text-sm text-gray-900"><%= @project.docker_container_id %></dd>
              </div>
          <div class="border-b border-gray-200 pb-4">
        <dt class="text-sm font-medium text-gray-500">User</dt>
          <dd class="mt-1 text-sm text-gray-900">
                    <% if @project.user.present? %>
              <%=link_to(@project.user.public_send(display_method_for(User)), @project.user) rescue @project.user.public_send(display_method_for(User))%>              
            <% else %>
              None
            <% end %>
          </dd>
              </div>
        </div>
    
    <!-- Has Many Associations -->
    <% has_many_associations = Project.reflect_on_all_associations(:has_many) %>
    <% if has_many_associations.any? %>
      <div class="mt-8 space-y-8">
        <h2 class="text-xl font-semibold text-gray-800 border-b pb-2">Related Records</h2>
        
        <% has_many_associations.each do |association| %>
          <div class="mt-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium text-gray-800"><%= association.name.to_s.titleize %></h3>
              <% if respond_to?("#{association.name}_path") %>
                <%= link_to "View All", send("#{association.name}_path"), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
              <% end %>
            </div>
            
            <% records = @project.send(association.name) %>
            
            <% if records.any? %>
              <% association_variable_name = association.name %>
              <% association_class = association.klass %>
              <% partial_path = "#{association.name}/#{association.name}" %>
              <% object = "@#{association.name}" %>
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <%= render partial: "#{association.name.to_s}/#{association.klass.model_name.element}", collection: records.limit(1), locals: { headers: true } %>     
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="projects">
                  <%= render records %>
                </tbody>
              </table>


              
              <% total = @project.send(association.name).count %>
              <% if total > 5 && respond_to?("#{association.name}_path") %>
                <div class="mt-2 text-right">
                  <p class="text-sm text-gray-700">
                    Showing 5 of <%= total %> records
                    <%= link_to "View All", send("#{association.name}_path"), class: "ml-2 text-indigo-600 hover:text-indigo-900" %>
                  </p>
                </div>
              <% end %>
            <% else %>
              <div class="mt-2 p-4 bg-gray-50 rounded-md text-sm text-gray-700">
                No <%= association.name.to_s.humanize.downcase %> found.
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
    
    <div class="mt-8">
      <%= button_to "Delete this project", @project, method: :delete, class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </div>
</div>
