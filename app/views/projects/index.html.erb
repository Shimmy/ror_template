<% content_for :title, "Projects" %>

<div class="mb-6 flex justify-end">
  <%= link_to "New Project", new_project_path, class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
</div>

<div class="overflow-hidden bg-white shadow sm:rounded-lg">
<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <%= render partial: "project", collection: @projects.limit(1), locals:{headers: true} %>      
    </thead>
    <tbody class="bg-white divide-y divide-gray-200" id="projects">
      <%= render partial: "project", collection: @projects%>            
    </tbody>
  </table>

  <% if @projects.empty? %>
    <div class="text-center py-6 text-gray-500">
      <p>No projects found.</p>
    </div>
  <% end %>
</div>